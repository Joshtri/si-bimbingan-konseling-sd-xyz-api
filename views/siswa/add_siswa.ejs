<!DOCTYPE html>
<html lang="en">
    <%-include('partials/head');%>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<body>
    <%-include('partials/header');%>


    <div class="container mt-5 mb-5">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="/adm/my/dashboard"><i class="fa-solid fa-house me-1"></i>Dashboard</a></li>
              <li class="breadcrumb-item"><a href="/adm/data/siswa">Data Siswa</a></li>
              <li class="breadcrumb-item active" aria-current="page"><%= title %></li>
            </ol>
            <div id="current-time" class="align-self-center"></div>
          
        </nav>

        <hr>

        <div class="d-flex justify-content-between">
            <div>
                <a class="btn btn-sm btn-warning" href="/adm/data/siswa">Kembali</a>
            </div>
        </div>

        <div class="row mt-3">
            <form action="/adm/data/siswa" method="post">

                <div class="col-lg-4"></div>
                    <label for="" class="form-label">Nama Siswa </label>
                    <input type="text" name="nama_siswa" class="form-control">
                </div>
                
                <div class="col-lg-4">
                    <label for="" class="form-label">NIS </label>
                    <input type="text" name="nis" maxlength="10" class="form-control">
                </div>

                <div class="col-lg-4">
                    <label for="" class="form-label">Orang Tua Siswa </label>

                    <select name="orangTuaId" class="form-select" id="" required> 
                        <option value="">-</option>

                        <% orangTuaData.forEach(function(orangTua) {  %>
                            <option value="<%= orangTua.id_orang_tua %>"> <%= orangTua.nama_orang_tua %></option>
                        <% }) %>
                  
                    </select>
                </div>

                <div class="col-lg-4">
                    <label for="" class="form-label">Jenis Kelamin </label>

                    <select name="jenis_kelamin" class="form-select" id="">

                        <option value="">-</option>
                        <option value="laki-laki">Laki-Laki</option>
                        <option value="perempuan">Perempuan</option>
                    </select>


                </div>
                
                
                <div class="col-lg-4">
                    <label for="" class="form-label">Kelas Siswa </label>

                    <select name="kelasId" class="form-select" id="" required> 
                        <option value="">-</option>

                        <% kelasData.forEach(function(kelas) {  %>
                            <option value="<%= kelas.id_kelas %>"><%= kelas.nama_kelas %> | <%= kelas.kelas_kejuruan %></option>
                        <% }) %>
                  
                    </select>
                </div>

                <div class="col-lg-4">
                    <label for="" class="form-label">Tempat Lahir </label>
                    <input type="text" name="tempat_lahir" class="form-control">
                </div>
                
                <div class="col-lg-4">
                    <label for="" class="form-label">Tanggal lahir </label>
                    <input type="date" name="tanggal_lahir" class="form-control">
                </div>

                <div class="col-lg-4">
                    <label for="" class="form-label">No. Telepon </label>
                    <input type="number" name="no_telepon" class="form-control">
                </div>

                <div class="col-lg-4">
                    <label for="" class="form-label">E-Mail </label>
                    <input type="email" name="email" class="form-control">
                </div>


                <div class="mt-4">
                    <button class="btn btn-success">Submit Data</button>
                </div>


            </form>

        </div>
        
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script src="/js/tooltip.js"></script>
    <script src="/js/features.js"></script>
</body>
</html> 